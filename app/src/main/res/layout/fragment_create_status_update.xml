<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/taskDetailsForUpdateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/taskDetailsForUpdateTitleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Task title:"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
            <TextView
                android:id="@+id/taskDetailsForUpdateTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="title..."
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
            <TextView
                android:id="@+id/taskDetailsForUpdateScopeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"
                android:text="Task scope:"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
            <TextView
                android:id="@+id/taskDetailsForUpdateScope"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="scope..."
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
            <TextView
                android:id="@+id/taskDetailsForUpdateDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:text="Task description:"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
            <TextView
                android:id="@+id/taskDetailsForUpdateDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="description..."
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:id="@+id/fromWhichUpdateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fromWhichUpdateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="8dp"
                android:textStyle="bold"
                android:text="This update follows from those update(s):"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/fromWhichUpdatechipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="false">
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">
            <TextView
                android:id="@+id/contentBodyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textStyle="bold"
                android:text="Content:"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
            <EditText
                android:id="@+id/contentBodyEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:layout_below="@+id/contentBodyText"
                android:hint="Content here..."
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:background="@android:color/transparent"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabTaskUpdateConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/contentBodyText"
                android:layout_alignRight="@+id/contentBodyText"
                android:src="@drawable/ic_done"
                app:tint="@color/white"
                android:layout_margin="16dp"
                android:visibility="visible"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/contentBodyPreviewLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/addDocumentsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@android:color/white"
            tools:listitem="@layout/item_added_documents"/>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/addDocuments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:visibility="visible"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">
        <LinearLayout
            android:id="@+id/addDocumentsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/addDocumentsIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_add_28dp"/>
            <TextView
                android:id="@+id/addDocumentsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center_vertical"
                android:text="Add Documents"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>