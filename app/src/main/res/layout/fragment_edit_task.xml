<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditTask">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/taskTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task title: "
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/taskTitleEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Task title"
                    android:textSize="18sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/taskScopeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task scope: "
                    android:textSize="20sp"/>
                <EditText
                    android:id="@+id/taskScopeEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Task scope"
                    android:textSize="18sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/taskDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Task description: "
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/taskDescriptionEdit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Task description"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/startDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start Date:"
                android:textSize="18sp"/>
            <LinearLayout
                android:id="@+id/startDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/startDateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_calendar"
                    android:backgroundTint="@color/white"/>
                <TextView
                    android:id="@+id/startDateText"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="yyyy/mm/dd"/>
                <ImageButton
                    android:id="@+id/startTimeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    app:srcCompat="@drawable/ic_time"
                    android:backgroundTint="@color/white"/>
                <TextView
                    android:id="@+id/startTimeText"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="hh:mm"/>
            </LinearLayout>
            <TextView
                android:id="@+id/dueDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Due Date:"
                android:textSize="18sp"/>
            <LinearLayout
                android:id="@+id/endDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/endDateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_calendar"
                    android:backgroundTint="@color/white"/>
                <TextView
                    android:id="@+id/endDateText"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="yyyy/mm/dd"/>
                <ImageButton
                    android:id="@+id/endTimeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="75dp"
                    app:srcCompat="@drawable/ic_time"
                    android:backgroundTint="@color/white"/>
                <TextView
                    android:id="@+id/endTimeText"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:text="hh:mm"/>
            </LinearLayout>
            <TextView
                android:id="@+id/taskDifficultyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task difficulty: "
                android:textSize="20sp"/>

            <RadioGroup
                android:id="@+id/taskDifficultiesChoices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/easyButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Easy"
                    android:checked="true"/>
                <RadioButton
                    android:id="@+id/middleButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Middle"/>
                <RadioButton
                    android:id="@+id/difficultButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Difficult"/>
            </RadioGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/taskAssignee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="Assignee"
                    android:textSize="20sp"/>
                <ImageButton
                    android:id="@+id/addTaskAssigneeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    app:srcCompat="@drawable/ic_add"/>
            </LinearLayout>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/addTaskAssigneeChipsGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="false">
            </com.google.android.material.chip.ChipGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/taskToWhichActivity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="The task belongs to which activity?"
                    android:textSize="20sp"/>
                <ImageButton
                    android:id="@+id/taskToWhichActivityButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    app:srcCompat="@drawable/ic_choose_from_list"/>
            </LinearLayout>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/taskToWhichActivityChipsGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="false">
            </com.google.android.material.chip.ChipGroup>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/taskSubtaskText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Any subtasks? "
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"/>
                <ImageButton
                    android:id="@+id/taskSubtaskButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    app:srcCompat="@drawable/ic_choose_from_list"/>
            </LinearLayout>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/taskSubtasksChipsGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="false">
            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/taskSuperiortaskText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Any superior tasks? "
                    android:layout_marginTop="8dp"
                    android:textSize="20sp"/>
                <ImageButton
                    android:id="@+id/taskSuperiortaskButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    app:srcCompat="@drawable/ic_choose_from_list"/>
            </LinearLayout>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/taskSuperiorTasksChipsGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleLine="false">
            </com.google.android.material.chip.ChipGroup>

            <Button
                android:id="@+id/taskConfirmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:text="Confirm"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>