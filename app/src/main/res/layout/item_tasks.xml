<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/groupIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/view"
            app:civ_shadow="true"
            app:civ_shadow_radius="0"
            app:civ_border="false" />

        <TextView
            android:id="@+id/taskList_title"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/greyShallow"
            android:layout_marginLeft="8dp"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Task Title"/>
        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="@color/greyShallow"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/taskList_startEndTime"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/greyShallow"
            android:layout_marginLeft="8dp"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Start at xxx and end at xxx:"/>
        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="@color/greyShallow"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/taskListActivities"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/greyShallow"
            android:layout_marginLeft="8dp"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Activities"/>
        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="@color/greyShallow"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/taskListAssignee"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/greyShallow"
            android:layout_marginLeft="8dp"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Assignee:"/>
        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="@color/greyShallow"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/taskList_level"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/greyShallow"
            android:layout_marginLeft="8dp"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="Easy"/>
        <View
            android:layout_width="1dp"
            android:layout_height="45dp"
            android:background="@color/greyShallow"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"/>
        <LinearLayout
            android:id="@+id/taskList_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/taskList_progressReading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_weight="0.25"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:text="xx%"/>
            <ProgressBar
                android:id="@+id/taskList_progressBar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:indeterminate="false"
                android:max="100"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>