<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemsList">

    <FrameLayout
        android:id="@+id/taskList_bar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:elevation="8dp"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/searchIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:tint="@color/greySecondary"
                    app:srcCompat="@drawable/ic_search"/>
                <EditText
                    android:id="@+id/searchText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/search_for_user"/>
                <ImageView
                    android:id="@+id/clearSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:tint="@color/greySecondary"
                    app:srcCompat="@drawable/ic_clear"/>
                <ImageView
                    android:id="@+id/proceedSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:tint="@color/greySecondary"
                    app:srcCompat="@drawable/ic_arrow_forward"
                    android:visibility="gone"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/filterBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:elevation="8dp"
            android:visibility="gone">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/button_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    app:tint="@color/greySecondary"
                    app:srcCompat="@drawable/ic_filter" />

                <LinearLayout
                    android:id="@+id/text_current_search_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/text_current_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all_documents"
                        android:textColor="@color/greySecondary"
                        tools:text="Filter" />

                    <TextView
                        android:id="@+id/text_current_sort_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Please select filtering criteria"
                        android:textColor="@color/greyDisabled" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/button_clear_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="8dp"
                    app:tint="@color/greySecondary"
                    app:srcCompat="@drawable/ic_clear" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </FrameLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollViewRecyclerTasks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/taskList_bar_container">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/taskListRecyclerViewTitleBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">
                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/groupIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center_vertical"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="0"
                        app:civ_border="false" />
                    <TextView
                        android:id="@+id/taskListTitleTaskTitle"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@color/purple_300"
                        android:layout_marginLeft="8dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:text="Task Title"
                        android:textColor="@color/white" />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="45dp"
                        android:background="@color/greyShallow"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"/>
                    <TextView
                        android:id="@+id/taskListTitleDueDate"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@color/purple_300"
                        android:layout_marginLeft="8dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Due date"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="45dp"
                        android:background="@color/greyShallow"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"/>
                    <TextView
                        android:id="@+id/taskListTitleActivities"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@color/purple_300"
                        android:layout_marginLeft="8dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Activities"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="45dp"
                        android:background="@color/greyShallow"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"/>
                    <TextView
                        android:id="@+id/taskListTitleAssignee"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@color/purple_300"
                        android:layout_marginLeft="8dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Assignee"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="45dp"
                        android:background="@color/greyShallow"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"/>
                    <TextView
                        android:id="@+id/taskListTitleLavel"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@color/purple_300"
                        android:layout_marginLeft="8dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Level"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="45dp"
                        android:background="@color/greyShallow"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"/>
                    <TextView
                        android:id="@+id/taskListTitleProgressBar"
                        android:layout_width="150dp"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@color/purple_300"
                        android:layout_marginLeft="8dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Progress"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_tasks"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                tools:listitem="@layout/item_tasks"
                android:visibility="gone"/>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_activities"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/taskList_bar_container"
        android:background="@android:color/white"
        tools:listitem="@layout/item_activities" />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_notificationsMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/taskList_bar_container"
        android:background="@android:color/white"
        tools:listitem="@layout/item_notifications_message"
        android:visibility="gone"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/taskList_bar_container"
        android:background="@android:color/white"
        tools:listitem="@layout/item_users"
        android:visibility="gone"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabItemListTasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/horizontalScrollViewRecyclerTasks"
        android:layout_alignRight="@+id/horizontalScrollViewRecyclerTasks"
        android:visibility="gone"
        android:src="@drawable/ic_add"
        app:tint="@color/white"
        android:layout_margin="16dp" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabItemListActivities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recycler_activities"
        android:layout_alignRight="@+id/recycler_activities"
        android:src="@drawable/ic_add"
        app:tint="@color/white"
        android:layout_margin="16dp" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabItemListNotifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recycler_notificationsMessage"
        android:layout_alignRight="@+id/recycler_notificationsMessage"
        android:src="@drawable/ic_add"
        app:tint="@color/white"
        android:layout_margin="16dp"
        android:visibility="gone"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabItemListUsers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recycler_user"
        android:layout_alignRight="@+id/recycler_user"
        android:src="@drawable/ic_add"
        app:tint="@color/white"
        android:layout_margin="16dp"
        android:visibility="gone"/>

</RelativeLayout>